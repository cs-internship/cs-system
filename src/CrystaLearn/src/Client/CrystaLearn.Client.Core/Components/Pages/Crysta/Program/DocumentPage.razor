@attribute [Route(Urls.Crysta.DocsPageRoutePattern)]
@attribute [Route("{culture?}" + Urls.Crysta.DocsPageRoutePattern)]
@using CrystaLearn.Shared.Dtos.Crysta
@inherits AppPageBase

<PageTitle>@Localizer[nameof(AppStrings.TermsPageTitle)]</PageTitle>

<BitSplitter FirstPanelMinSize="120" FirstPanelSize="120" FirstPanelMaxSize="300">
    <FirstPanel>
        <BitStack Class="content-full">
        
            @if (IsLoadingTree)
            {
                <BitEllipsisLoading Style="align-self:center;"/>
            }
            else
            {
                <BitLabel Typography="BitTypography.Body1">Documents</BitLabel>
                <BitNav Items="DocumentsTree"
                        Style="width: 100%;"
                        OnItemClick="(BitNavItem item) => CurrentDocument = item.Data as DocumentDto" />
            }
            
        </BitStack>
        
    </FirstPanel>
    <SecondPanel>
        <BitStack Horizontal>
            <BitSpacer Width="5"></BitSpacer>
            <DocumentComponent Document="CurrentDocument" />
        </BitStack>
    </SecondPanel>
</BitSplitter>
