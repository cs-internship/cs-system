@inherits ComponentBase


@if (LoadedDocument is not null)
{
    if (IsLoadingDocument)
    {
        <BitProgress Indeterminate />
        <BitProgress Circular Indeterminate />
    }
    else
    {
        <BitStack Gap="0" FitHeight>
            <BitText Typography="BitTypography.H3">@LoadedDocument.Title</BitText>
            <BitStack Horizontal Gap="3rem">
                <BitText Typography="BitTypography.Subtitle1">@LoadedDocument.SyncInfo.SyncStartDateTime.ToString("yyyy/MM/dd HH:mm")</BitText>
                <BitText Typography="BitTypography.Subtitle1">@LoadedDocument.SyncInfo.SyncHash</BitText>
            </BitStack>
        </BitStack>
        <BitStack Class="content-part">
            <BitText Typography="BitTypography.Body1">@((MarkupString)(LoadedDocument.Content ?? ""))</BitText>
        </BitStack>
    }
}
else
{
    <BitText Typography="BitTypography.H3">No document selected</BitText>
}
